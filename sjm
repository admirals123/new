#!/bin/bash

# Array of service names to replace
service_names=("service1" "service2" "service3" "another-service")

# YAML file to modify
yaml_file="a.yaml"

# Loop through the service names
for service_name in "${service_names[@]}"; do
  # Use sed to replace <service-name> with the current service_name
  # The -i option edits the file in place
  sed -i "s/<service-name>/$service_name/g" "$yaml_file"

  # Optional: Create a backup of the original file before each replacement.
  # cp "$yaml_file" "$yaml_file.bak" # Uncomment if needed

done

echo "Replacement complete."

# Optional: Print the modified YAML file (for verification)
# cat "$yaml_file" 
