#!/bin/bash

name_values=()

for file in *.eso.yml; do
  # Use yq to iterate over ALL documents in the file
  yq eval 'select(file | test("\\.eso\\.yml$")).document | .metadata.name' "$file" | while read name_value; do
    if [[ -z "$name_value" ]]; then
      echo "Could not extract name value from a document in $file. Skipping."  # More specific message
    else
      name_values+=("$name_value")
    fi
  done
done

# Print each name on a separate line
for name in "${name_values[@]}"; do
  echo "$name"
done
